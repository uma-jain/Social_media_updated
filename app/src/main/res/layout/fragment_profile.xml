<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ProfileFragment">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:id="@+id/r1"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="#495CCC">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/fp_cover"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:clickable="true"></ImageView>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/fp_profileImage"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginStart="30dp"
                app:civ_border_width="10dp"
                app:civ_border_color="#FFFFFF"
                android:layout_marginTop="120dp"
                android:src="@drawable/logo"></de.hdodenhof.circleimageview.CircleImageView>


        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_below="@+id/r1"
        android:layout_width="match_parent"
        android:orientation="vertical"
         android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/l1"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/fp_username"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            android:text="UserName">
        </TextView>
        <TextView
            android:id="@+id/fp_bio"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            android:text="Bio">
        </TextView>
        <TextView
            android:id="@+id/fp_profession"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Profession">
        </TextView>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_below="@+id/l1"
        android:layout_height="4dp"
        android:id="@+id/v1"
        android:background="@drawable/shadow"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fp_display_post_images"
        android:layout_width="match_parent"
        android:layout_below="@id/v1"
        android:layout_margin="5dp"
        android:layout_height="match_parent"
        tools:ignore="MissingClass">

    </androidx.recyclerview.widget.RecyclerView>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fp_editprofile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="end|bottom"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        app:backgroundTint="@android:color/white"
        android:layout_marginTop="1dp"
        app:borderWidth="2dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="15dp"
        android:contentDescription="submit"
        android:src="@drawable/ic_baseline_edit_24" />



</RelativeLayout>