<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="2dp"
    android:elevation="2dp"
    app:cardBackgroundColor="#FAFAFA"
    app:contentPadding="5dp"
    android:layout_margin="10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/row_message_user_civ_profilepic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:src="@drawable/ic_baseline_person_outline_24" />

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/row_message_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="username"
                android:layout_margin="2dp"
                android:textColor="#B7D59D"
                android:textSize="20dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/row_message_user_lastmsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="lastMessage"
                android:layout_margin="2dp"
                android:textColor="#B7D59D"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:layout_marginLeft="30dp"
            android:id="@+id/row_message_user_lastmessagedtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="time"></TextView>

    </LinearLayout>
</androidx.cardview.widget.CardView>